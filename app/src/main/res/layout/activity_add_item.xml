<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jose.actividad_firebase.AddItemActivity">

    <Button
        android:id="@+id/btn_cancelNewItem"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_addNewItem"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/btn_addNewItem"
        android:background="#FF48C15E"
        android:text="Cancelar" />

    <Button
        android:id="@+id/btn_addNewItem"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollNewItem"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#FF48C15E"
        android:text="Añadir" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Nuevo Item!"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/scrollNewItem"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/borderacc"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scroll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerNewItemCategory"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_newItemPrice"
                android:layout_below="@+id/txt_newItemPrice"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/txt_newItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Nombre Del Item"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txt_newItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_newItemName"
                android:layout_below="@+id/txt_newItemName"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txt_newItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_newItemDescription"
                android:layout_below="@+id/txt_newItemDescription"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Precio Del Item"
                android:inputType="textPersonName" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
